<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Student #<%= @the_id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/students">
          Go back
        </a>
      </div>
    </div>

    <dl>
      <dt>
        First name
      </dt>
      <dd>
        <%= @the_student.first_name %>
      </dd>

      <dt>
        Last name
      </dt>
      <dd>
        <%= @the_student.last_name %>
      </dd>

      <dt>
        Email
      </dt>
      <dd>
        <%= @the_student.email %>
      </dd>

      <dt>
        Number of courses
      </dt>
      <dd>
        <%= Enrollment.where({ :student_id => @the_student.id }).count %>
      </dd>
    </dl>
  </div>
</div>


<hr>

<h3>Course Load</h3>
<ul>
  <% @classes = Enrollment.where({:student_id => @the_student.id }) %>
  <% @classes.each do |enrollment| %>
    <li>
      <a href="/courses/<%= enrollment.course_id %>">
      <% @class_title = Course.where({:id => enrollment.course_id}).at(0) %>
        <%= @class_title.title %>
      </a>
    </li>
  <% end %>
</ul>
